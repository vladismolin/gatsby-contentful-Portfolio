name: Production Build

on:
  pull_request:
  push:
    branches:
      - master
  
jobs:
  build:
    runs-on: macos-latest
    
    strategy:
      matrix:
        node-version: [12.x]
    
    steps:
    - uses: actions/checkout@v1
    - name: Use Node.js $PP matrix.node-version }}
      uses: actions/setup-node@v1
      with:
        node-version: ${{ matrix.node-version }}
